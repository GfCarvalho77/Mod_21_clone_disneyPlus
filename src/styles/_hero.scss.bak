@use 'variaveis';

.hero{
   padding: 5.6vw;
    min-height: 80vh;
    background-image: url(../images/hero_desktop.jpeg);
    text-align: center;
    background-size: cover;

   &__content{
      max-width: 576px;      

      &__branding{
         max-width: 288px;
         margin: 0 auto 34px;         
      }
      .title--small{
         margin-bottom:57px;
      }

      p{
         margin-bottom: 18px;

         &:last-child {
            margin-top: 54px;
         }
      }
      &__combos{
         display: flex;
         justify-content: space-between;
         
         &__combo{
            width: calc(50% - 12px);
            
            img{
               max-height: 60px;
            }

            button{
               display: block;
               width: 100%;
               height: 60px;
               font-size: 18px;
               color: variaveis.$corTextoSecundario;
               background-color: #6422ff;
               text-transform: uppercase;
               border-radius: 4px;
               margin-top: 2vw;
               margin-bottom: 8px;
            }

         }

      }

   }
}